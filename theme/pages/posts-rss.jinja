{%- include "pages/_vars.jinja" -%}

<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0">
  <channel>
    <title>{{title}}</title>
    <link>{{base}}</link>
    <description>{{description}}</description>
    <copyright>Â© {{copyright}}</copyright>
    {% for page in posts %}
      <item>
        <title>{{page.title}}</title>
        <link>{{base}}/{{page.category}}/{{page.slug}}.html</link>
        <pubDate>{{page.date | date("%a, %d %h %Y")}} 00:00:00 +0000</pubDate>
        <description><![CDATA[{{page.content | safe}}]]></description>
      </item>
    {% endfor %}
  </channel>
</rss>
