{% macro page_nav(class) %}
  <page-nav class="{{class}}">
    <template>
      <link rel="stylesheet" href="/components/page-nav.css" />
      <nav class="nav">
        <button
          id="toggle"
          class="toggle"
          aria-label="Toggle Nav List"
          aria-pressed="false"
        >
          <svg id="toggleIcon" class="toggle-icon" aria-hidden="true" viewBox="0 0 16 16">
            <path
              d="M1 1 l14 0 l0 3.5 l-14 0 z m0 5.25 l14 0 l0 3.5 l-14 0 z m0 5.25 l14 0 l0 3.5 l-14 0 z"
            ></path>
            <path
              d="M1 20 l3 -3 l11 11 l-3 3 z m11 -3 l3 3 l-11 11 l-3 -3 z"
            ></path>
          </svg>
        </button>
        <div id="list" class="list">
          <div class="list-content"><slot></slot></div>
        </div>
      </nav>
    </template>
    {{ caller() }}
  </page-nav>
{% endmacro %}
