{% include "/vars.jinja" %}

<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0">
	<channel>
		<title>{{site.title}}</title>
		<link>{{site.host}}</link>
		<copyright>Â© {{year()}} {{site.author}}</copyright>
		{% for (e, tags) in category_entries %}
		<item>
			<title>{% if e.title %}{{e.title}}{% else %}Untitled{% endif %}</title>
			<link>{{site.host + "/" + e.category + "/" + e.slug + "/"}}</link>
			<pubDate>{{e.date | format_date("%a, %d %h %Y")}} 00:00:00 +0000</pubDate>
			<description>
				<![CDATA[{{e.content}}]]>
			</description>
		</item>
		{% endfor %}
	</channel>
</rss>
