{%- macro nav_list(class) -%}
  <ul class="{{class}}">
    <li><a href="/">Posts</a></li>
    <li><a href="/posts.rss">RSS Feed</a></li>
    <li><a href="https://github.com/erickmerchant/my-blog">View Source</a></li>
  </ul>
{%- endmacro -%}

{% from "/elements/page-nav.jinja" import page_nav %}

<!DOCTYPE html>
<html lang="en-US">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{page.title}} | ErickMerchant.com</title>
    <script type="module" src="/element.js"></script>
    <script type="module" src="/elements/page-nav.js"></script>
    {% for name in page.elements | split_string(',') %}
      <script type="module" src="/elements/{{name}}.js"></script>
    {% endfor %}
    <link rel="stylesheet" href="/common.css">
    <link rel="stylesheet" href="/page.css">
    <link rel="preload" href="/elements/page-nav.css" as="style">
    {% for name in page.elements | split_string(',') %}
      <link rel="preload" href="/elements/{{name}}.css" as="style">
    {% endfor %}
    <link rel="preload" href="/fonts/Chivo/Chivo-VariableFont_wght-subset.woff2" as="font" crossorigin="anonymous">
    <link rel="icon" href="/favicon.svg" type="image/svg+xml">
  </head>
  <body>
    {% call page_nav() %}
      {{nav_list("navList")}}
    {% endcall %}
    <main class="main">
      {% block main %}
      {% endblock %}
    </main>
    <footer class="footer">
      {{nav_list("footerNavList")}}
      <p class="copyright">&copy; 2023 Erick Merchant</p>
    </footer>
  </body>
</html>
