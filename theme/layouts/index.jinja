{% extends "layouts/base.jinja" %}

{% block main %}
<div>
	<h1>{{page.title}}</h1>
	{{page.content}}
</div>
<ol class="index">
	{% for p in posts %}
	<li>
		<h2><a href="/posts/{{p.slug}}/">{{p.title}}</a></h2>
		{% if p.date %}
		<p class="published"><time>{{p.date | format_date("%B %e, %Y")}}</time></p>
		{% endif %}
		<p>{{p.description}}</p>
	</li>
	{% endfor %}
</ol>
{% endblock %}
