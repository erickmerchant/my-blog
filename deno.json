{
	"unstable": ["temporal"],
	"tasks": {
		"post:draft": "deno run -A app/post-draft.ts",
		"post:publish": "deno run -A app/post-publish.ts",
		"clean": "deno run -A app/clean.ts",
		"dev:build": "deno run -A --watch=content,public,app app/build.ts --dev",
		"dev:serve": "deno serve -A --watch=app --port=3000 app/serve.ts --dev",
		"dev": {
			"dependencies": ["clean", "dev:build", "dev:serve"]
		},
		"build": "deno run -A app/build.ts",
		"serve": "deno serve -A --port=3000 app/serve.ts",
		"start": {
			"dependencies": ["clean", "build", "serve"]
		}
	},
	"imports": {
		"@std/async": "jsr:@std/async@^1.0.13",
		"@std/crypto": "jsr:@std/crypto@^1.0.4",
		"@std/encoding": "jsr:@std/encoding@^1.0.10",
		"@std/fs": "jsr:@std/fs@^1.0.17",
		"@std/http": "jsr:@std/http@^1.0.19",
		"@std/path": "jsr:@std/path@^1.0.9",
		"@std/text": "jsr:@std/text@^1.0.13",
		"@std/toml": "jsr:@std/toml@^1.0.5",
		"fast-xml-parser": "npm:fast-xml-parser@5.2.1",
		"handcraft": "npm:handcraft",
		"html-minifier": "npm:html-minifier@^4.0.0",
		"lightningcss": "npm:lightningcss@^1.29.3",
		"marked": "npm:marked@^15.0.11",
		"prismjs": "npm:prismjs@^1.30.0"
	},
	"compilerOptions": {
		"types": ["./app/types.d.ts"],
		"lib": [
			"dom",
			"dom.iterable",
			"dom.asynciterable",
			"es2024",
			"deno.ns",
			"deno.unstable"
		],
		"noImplicitAny": false
	},
	"lint": {
		"rules": {
			"exclude": ["no-explicit-any"]
		}
	},
	"fmt": {
		"useTabs": true
	}
}
