{
  "unstable": ["temporal"],
  "tasks": {
    "post:draft": "deno run -A cli/post-draft.ts",
    "post:publish": "deno run -A cli/post-publish.ts",
    "dev": "deno serve -A --port=4000 --watch-hmr flint.ts --dev",
    "build": "deno run -A flint.ts --build",
    "stage": {
      "command": "deno serve -A --port=4000 --parallel dist/serve.ts",
      "dependencies": ["build"]
    }
  },
  "imports": {
    "@flint/framework": "jsr:@flint/framework@^0.18.0",
    "@handcraft/lib": "jsr:@handcraft/lib@^1.11.0",
    "@std/cli": "jsr:@std/cli@^1.0.24",
    "@std/fs": "jsr:@std/fs@^1.0.20",
    "@std/path": "jsr:@std/path@^1.1.3",
    "@std/text": "jsr:@std/text@^1.0.16",
    "@std/toml": "jsr:@std/toml@^1.0.11",
    "fast-xml-parser": "npm:fast-xml-parser@5.3.2",
    "markdown-it": "npm:markdown-it@^14.1.0",
    "markdown-it-prism": "npm:markdown-it-prism@^3.0.1",
    "prismjs": "npm:prismjs@^1.30.0"
  },
  "compilerOptions": {
    "lib": [
      "deno.ns",
      "deno.window",
      "deno.unstable",
      "dom",
      "dom.iterable",
      "es2023"
    ]
  }
}
