{
  "tasks": {
    "dev": {
      "dependencies": ["dev-frontend", "dev-server"]
    },
    "dev-frontend": "deno -A --unstable-temporal --watch=content,public main.ts",
    "dev-server": "APP_PORT=3000 cargo watch -x 'r --no-default-features'",
    "frontend": "deno run -A --unstable-temporal main.ts --cache-bust --inline-css"
  },
  "imports": {
    "@happy-dom/global-registrator": "npm:@happy-dom/global-registrator@^17.4.4",
    "@std/crypto": "jsr:@std/crypto@^1.0.4",
    "@std/encoding": "jsr:@std/encoding@^1.0.10",
    "@std/fs": "jsr:@std/fs@^1.0.17",
    "@std/path": "jsr:@std/path@^1.0.9",
    "@std/toml": "jsr:@std/toml@^1.0.5",
    "@swc/core": "npm:@swc/core@^1.11.22",
    "fast-xml-parser": "npm:fast-xml-parser@5.2.1",
    "handcraft": "npm:handcraft",
    "happy-dom": "npm:happy-dom@^17.4.4",
    "html-minifier": "npm:html-minifier@^4.0.0",
    "lightningcss": "npm:lightningcss@^1.29.3",
    "marked": "npm:marked@^15.0.11"
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "types": ["./types.d.ts"],
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "es2024",
      "deno.ns",
      "deno.unstable"
    ]
  }
}
