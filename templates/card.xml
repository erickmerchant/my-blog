{% import "status.html" as status %}

<svg viewBox="0 0 1147 645" xmlns="http://www.w3.org/2000/svg">
	<style>
		* {
			fill: #FFF;
		}

		.bg {
			fill: #002A2D;
		}

		.title {
			font-family: "Inter Black";
			font-size: 40px;
		}

		.bottom-text {
			font-family: "Inter";
			font-weight: 700;
			font-size: 30px;
		}
	</style>
	<path d="M0 0 H1147 V645 H0 Z" class="bg"></path>
	<text x="50%" y="190" text-anchor="middle" class="title">{{post.title}}</text>
	{% if let Some(date) = post.date_published %}
		<text x="1107" y="555" text-anchor="end" class="bottom-text">{{date.format("%Y-%m-%d")}}</text>
	{% endif %}
	<text x="1107" y="600" text-anchor="end" class="bottom-text">{{site.title}}</text>
</svg>
