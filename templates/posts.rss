<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet href="/posts.xsl" type="text/xsl"?>
<rss version="2.0">
  <channel>
    <title>{{site.title}}</title>
    <link>{{site.base}}</link>
    <description>{{site.description}}</description>
    <copyright>{{site.copyright}}</copyright>
    {% for post in posts %}
      <item>
        <title>{{post.data.title}}</title>
        <link>{{site.base}}/posts/{{post.data.slug}}.html</link>
        <pubDate>{{post.data.date|format_date("%a, %d %h %Y")}}</pubDate>
        <description><![CDATA[{{post.data.description}}]]></description>
      </item>
    {% endfor %}
  </channel>
</rss>
