{{#> page title="Home"}}
  {{#*inline "heading"}}
    <h1 class="Banner heading">{{site.title}}</h1>
  {{/inline}}

  <ol class="Home posts">
    {{#each posts as |post|}}
      <li class="Home post">
        <h2 class="Home post-title"><a href="/posts/{{@key}}.html">{{post.title}}</a></h2>
        <p class="Home post-description">{{post.description}}</p>
      </li>
    {{/each}}
  </ol>
{{/page}}
