{% extends "layouts/layout.jinja" %}

{% block main %}
  <div>
    <h1>{{page.title}}</h1>
    {{page.content | safe}}
  </div>
  <ol class="index">
    {% for page in posts %}
      <li>
        <h2><a href="/{{page.category}}/{{page.slug}}.html">{{page.title}}</a></h2>
        <p class="published"><time>{{page.date | format_date("%B %e, %Y")}}</time></p>
        <p>{{page.description}}</p>
      </li>
    {% endfor %}
  </ol>
{% endblock %}
