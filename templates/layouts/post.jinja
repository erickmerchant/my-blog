{% extends "layouts/layout.jinja" %}

{%- macro pagination_link(page, position) -%}
  {% if page %}
    <li class="paginationLink">
      <a href="/{{page.category}}/{{page.slug}}.html">
        {{page.title}}
      </a>
    </li>
  {% else %}
    <li class="paginationPlaceholder"></li>
  {% endif %}
{%- endmacro -%}

{% block main %}
  <header>
    <h1>{{page.title}}</h1>
    <p class="published">
      <time>{{page.date | format_date("%B %e, %Y")}}</time>
    </p>
  </header>

  {{page.content | safe}}

  <ul class="pagination">
    {{pagination_link(pagination.previous)}}

    {{pagination_link(pagination.next)}}
  </ul>
{% endblock %}
