{% extends "layouts/layout.jinja" %}

{%- from "icons.jinja" import arrow_left_icon, arrow_right_icon -%}

{%- macro pagination_link(page, position, icon) -%}
    <li>
      {% if page %}
        <a class="paginationLink{{position}}" href="/{{page.category}}/{{page.slug}}.html">
          <span class="paginationPageTitle">{{page.title}}</span>
          {{icon}}
        </a>
      {% else %}
        <span class="paginationPlaceholder"></span>
      {% endif %}
    </li>
{%- endmacro -%}

{% block main %}
  <header>
    <h1>{{page.title}}</h1>
    <p class="published">
      <time>{{page.date | format_date("%B %e, %Y")}}</time>
    </p>
  </header>

  {{page.content | safe}}

  <ul class="pagination">
    {{pagination_link(pagination.previous, "Previous", arrow_left_icon(class="paginationIcon"))}}

    {{pagination_link(pagination.next, "Next", arrow_right_icon(class="paginationIcon"))}}
  </ul>
{% endblock %}
