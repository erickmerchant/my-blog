{% macro tags(entry) %}
	{% if entry.pinned %}
		<span>
			<span class="pinned tag">
				<svg viewBox="0 0 12 16">
					<title>Pinned</title>
					<path d="M1 1 L11 1 L9 3 L9 8 L11 10 L1 10 L3 8 L3 3 Z M5 11 L5 14 L6 15 L7 14 L7 11" />
				</svg>
				Pinned
			</span>
		</span>
	{% else %}
		<span>
			<time class="tag">
				<svg viewBox="0 0 16 16">
					<title>Date</title>
					<path d="M1 1 L15 1 L15 4.75 L1 4.75 Z M1 5.75 L15 5.75 L15 15 L1 15" />
				</svg>
				{{entry.date | format_date("%B %e, %Y")}}
			</time>
		</span>
	{% endif %}
{% endmacro %}

<!DOCTYPE html>
<html lang="en-US">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<title>{% block title %}{{site.title}}{% endblock %}</title>
	<link rel="stylesheet" href="/page.css" />
	<link rel="stylesheet" media="print" onload="this.media='all'" href="https://fonts.bunny.net/css?family=jetbrains-mono:400" />
	<script type="module" src="/top-bar.js"></script>
	<meta name="view-transition" content="same-origin" />
	<meta name="description" content="{{site.description}}" />
	<link rel="icon" href="/favicon.svg" type="image/svg+xml" />
	<link rel="alternate" type="application/rss+xml" title="Posts" href="{{site.host}}/posts.rss" />
</head>

<body>
	<top-bar>
		<nav>
			<ul>
				<li><a href="/">{{site.title}}</a></li>
			</ul>
		</nav>
	</top-bar>
	<main>
		<header class="heading">
			{% block main_header %}{% endblock %}
		</header>

		{% block main %}{% endblock %}
	</main>
	<footer class="footer">
		<ul class="footer-links">
			<li>&copy; {{site.author}}</li>
			<li><a href="https://github.com/erickmerchant/my-blog">View Source</a></li>
			<li>
				<a class="rss-link" href="/posts.rss">
					<svg viewBox="0 0 6 6">
						<path d="M2 5 a1 1 0 1 0 -2 0 a1 1 0 10 2 0 M0 3 a3 3 0 0 1 3 3 h1 a4 4 0 0 0 -4 -4z M0 1 a5 5 0 0 1 5 5 h1 a6 6 0 0 0 -6 -6 Z" />
					</svg>
					RSS
				</a>
			</li>
		</ul>
	</footer>
</body>

</html>
