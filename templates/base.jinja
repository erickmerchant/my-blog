{% macro tags(entry) %}
	{% if entry.pinned %}
		<span>
			<span class="pinned tag">
				<svg viewBox="0 0 10 14">
					<title>Pinned</title>
					<path d="M0 0 L10 0 L8 2 L8 7 L10 9 L0 9 L2 7 L2 2 Z M4 9.5 L4 13 L5 14 L6 13 L6 9.5"></path>
				</svg>
				Pinned
			</span>
		</span>
	{% else %}
		<span>
			<time class="tag">
				<svg viewBox="0 0 10 10">
					<title>Date</title>
					<path d="M0 0 L10 0 L10 2.5 L0 2.5 Z M0 3 h1 v1 h-1 z m1.5 0 h1 v1 h-1 z m1.5 0 h1 v1 h-1 z m1.5 0 h1 v1 h-1 z m1.5 0 h1 v1 h-1 z m1.5 0 h1 v1 h-1 z m1.5 0 h1 v1 h-1 z M0 4.5 h1 v1 h-1 z m1.5 0 h1 v1 h-1 z m1.5 0 h1 v1 h-1 z m1.5 0 h1 v1 h-1 z m1.5 0 h1 v1 h-1 z m1.5 0 h1 v1 h-1 z m1.5 0 h1 v1 h-1 z M0 6 h1 v1 h-1 z m1.5 0 h1 v1 h-1 z m1.5 0 h1 v1 h-1 z m1.5 0 h1 v1 h-1 z m1.5 0 h1 v1 h-1 z m1.5 0 h1 v1 h-1 z m1.5 0 h1 v1 h-1 z M0 7.5 h1 v1 h-1 z m1.5 0 h1 v1 h-1 z m1.5 0 h1 v1 h-1 z m1.5 0 h1 v1 h-1 z m1.5 0 h1 v1 h-1 z m1.5 0 h1 v1 h-1 z m1.5 0 h1 v1 h-1 z M0 9 h1 v1 h-1 z m1.5 0 h1 v1 h-1 z m1.5 0 h1 v1 h-1 z m1.5 0 h1 v1 h-1 z m1.5 0 h1 v1 h-1 z m1.5 0 h1 v1 h-1 z m1.5 0 h1 v1 h-1 z"></path>

				</svg>
				{{entry.date | format_date("%B %e, %Y")}}
			</time>
		</span>
	{% endif %}
{% endmacro %}

<!DOCTYPE html>
<html lang="en-US">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<title>{% block title %}{{site.title}}{% endblock %}</title>
	<link rel="stylesheet" href="/page.css" />
	<script type="module" src="/top-bar.js"></script>
	<meta name="view-transition" content="same-origin" />
	<meta name="description" content="{{site.description}}" />
	<link rel="icon" href="/favicon.svg" type="image/svg+xml" />
	<link rel="alternate" type="application/rss+xml" title="Posts" href="{{site.host}}/posts.rss" />
</head>

<body>
	<top-bar>
		<nav>
			<ul>
				<li><a href="/">{{site.title}}</a></li>
			</ul>
		</nav>
	</top-bar>
	<main>
		<header class="heading">
			{% block main_header %}{% endblock %}
		</header>

		{% block main %}{% endblock %}
	</main>
	<footer class="footer">
		<ul class="footer-links">
			<li>&copy; {{site.author}}</li>
			<li><a href="https://github.com/erickmerchant/my-blog">View Source</a></li>
			<li>
				<a class="rss-link" href="/posts.rss">
					<svg viewBox="0 0 6 6">
						<path d="M2 5 a1 1 0 1 0 -2 0 a1 1 0 10 2 0 M0 3 a3 3 0 0 1 3 3 h1 a4 4 0 0 0 -4 -4z M0 1 a5 5 0 0 1 5 5 h1 a6 6 0 0 0 -6 -6 Z" />
					</svg>
					RSS
				</a>
			</li>
		</ul>
	</footer>
</body>

</html>
