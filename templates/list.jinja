{% extends "base.jinja" %}

{% macro list(entry_list) %}
	<ol class="index">
		{% for entry in entry_list %}
			<li>
				<header class="heading">
					<h2><a href="/posts/{{entry.slug}}/">{{entry.title}}</a></h2>
					{{sub_heading(entry)}}
				</header>
			</li>
		{% endfor %}
	</ol>
{% endmacro %}

{% block title %}
	{{site.title}}
{% endblock %}

{% block main %}
	<header class="heading">
		<h1>Posts</h1>
	</header>

	{{list(entry_list)}}
{% endblock %}
