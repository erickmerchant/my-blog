{% extends "_layout.jinja" %}

{%- macro pagination_link(page, icon) -%}
    <a class="pagination-link" href="/{{page.category}}/{{page.slug}}.html">
      {{page.title}} <page-icon name="{{icon}}"></page-icon>
    </a>
{%- endmacro -%}

{% block main %}
  <header>
    <h1>{{page.title}}</h1>
    <p class="published">
      <time>{{page.date | date("%B %e, %Y")}}</time>
    </p>
  </header>

  {{page.content | safe}}

  {% if pagination.previous %}
    {{ pagination_link(pagination.previous, "arrowLeft") }}
  {% endif %}

  {% if pagination.next %}
    {{ pagination_link(pagination.next, "arrowRight") }}
  {% endif %}

{% endblock %}
